;This version returns the string length without the null byte
stringlength:
;Returns BC as the length of the null-terminated string
;speed: 41+21n
;12 bytes
  xor a
  ld c,a
  ld b,a
  cpir
  dec a   ;A is $FF
  xor c
  ld c,a
  ld a,b
  cpl
  ld b,a
  ret
